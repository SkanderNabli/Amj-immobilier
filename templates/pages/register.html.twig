{% extends 'base.html.twig' %}

{% block content %}
    <section class="content">
        <section class="block">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-8 col-lg-6 col-md-6 col-sm-8">
                        {{ form_start(registerForm,{'attr' :  {'class': 'form clearfix'}  }) }}
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    {{ form_row(registerForm.username) }}
                                </div>
                            </div>
                            <!--end form-group-->
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    {{ form_row(registerForm.civility) }}
                                </div>
                                <!--end form-group-->
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_row(registerForm.firstname) }}
                                </div>
                                <!--end form-group-->
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_row(registerForm.lastname) }}
                                </div>
                                <!--end form-group-->
                            </div>
                        </div>
                        <!--end form-group-->
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    {{ form_row(registerForm.password.first) }}
                                </div>
                                <!--end form-group-->
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    {{ form_row(registerForm.password.second) }}
                                </div>
                                <!--end form-group-->
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(registerForm.email) }}
                                    {{ form_widget(registerForm.email) }}
                                    {{ form_errors(registerForm.email) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_row(registerForm.tel) }}
                                </div>
                                <!--end form-group-->
                            </div>
                        </div>


                        <div class="col-md-10 d-flex justify-content-between align-items-baseline">
                            <label >
                                {{ form_row(registerForm.newsletter) }}
                            </label>
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                        {{ form_end(registerForm) }}
                        <hr>
                        <p>
                            By clicking "Register" button, you agree with our <a href="#" class="link">Terms &
                                Conditions.</a>
                        </p>
                    </div>
                    <!--end col-md-6-->
                </div>
                <!--end row-->
            </div>
            <!--end container-->
        </section>
        <!--end block-->
    </section>
{% endblock %}

