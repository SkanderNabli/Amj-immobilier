{% block javascripts %}

    <script>
        let latitude = {{ prop.lat }};
        let longitude = {{ prop.lng }};
        let markerImage = "/assets/img/map-marker.png";
        let mapTheme = "light";
        let mapElement = "map-small";
        let markerDrag = false;
        simpleMap(latitude, longitude, markerImage, mapTheme, mapElement, markerDrag);
    </script>

{% endblock %}